<Window x:Class="MTPAutoCopier.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:mtpAutoCopier="clr-namespace:MTPAutoCopier.ViewModels"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Window.DataContext>
        <mtpAutoCopier:MainVm/>
    </Window.DataContext>
    <Grid>
        <DataGrid Margin="10" MaxHeight="300" VerticalAlignment="Top" ItemsSource="{Binding AvailableMediaDevices}" SelectedItem="{Binding SelectedDevice, Mode=TwoWay}" AutoGenerateColumns="False">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Manufacturer" Binding="{Binding Manufacturer}"></DataGridTextColumn>
                <DataGridTextColumn Header="Description" Binding="{Binding Description}"></DataGridTextColumn>
                <DataGridTextColumn Header="Device ID" Binding="{Binding DeviceId}"></DataGridTextColumn>
            </DataGrid.Columns>
        </DataGrid>
        <Button Margin="10" MaxHeight="50" VerticalAlignment="Bottom" Command="{Binding TestCommand}">Button</Button>
    </Grid>
</Window>
